<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".descansolargo_cronometros">

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/circulo_verde" />
    <TextView
        android:id="@+id/tvDescansoLargo"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/inika_bold"
        android:text="15:00"
        android:textColor="@color/greenText"
        android:textSize="60dp" />
    <Button
        android:id="@+id/btnIniciarDescansoLargo"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/greenText"
        android:text="Iniciar"
        android:fontFamily="@font/inika_regular"
        android:textSize="20dp"
        android:layout_marginTop="250dp"/>

</FrameLayout>